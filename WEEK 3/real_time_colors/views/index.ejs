<html>
    <head>
        <title>The Great Button Game</title>
        <link rel='stylesheet' type='text/css' href='stylesheets/style.css'>
        <script src='http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js'></script>
        <script type ='text/javascript' src='/socket.io/socket.io.js'></script>
        <script type ='text/javascript'>
            $(document).ready(function(){
              var socket = io.connect();
              $('#green_button').click(function(){
                  socket.emit('green_pressed');
                });
              $('#blue_button').click(function(){
                  socket.emit('blue_pressed');
                });
              $('#pink_button').click(function(){
                  socket.emit('pink_pressed');
                });

              socket.on('change_green', function(data){
                $('body').css('background-color', 'green');
              });
              socket.on('change_blue', function(data){
                $('body').css('background-color', 'blue');
              });
              socket.on('change_pink', function(data){
                $('body').css('background-color', 'pink');
              });
            });
        </script>
    </head>
    <body>
        <div id='wrapper'>
            <div id='button'>
                <button id="green_button">Green</button>
                <button id="blue_button">Blue</button>
                <button id="pink_button">Pink</button>
            </div>
        </div>
    </body>
</html>